<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".myactivity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis Pesan" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dapat"
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Lihat Pesan"
                android:textColor="#FFFF" />

            <Button
                android:id="@+id/share"
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="share"
                android:text="Bagikan"
                android:textColor="#FFFF" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/duabelas"
            android:layout_marginTop="@dimen/duabelas"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <Button
                android:id="@+id/kalkulator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Kalkulator"
                android:textColor="#FFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="fragment"
                android:text="Fragment"
                android:textColor="#FFFF" />

            <Button
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/duabelas"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="viewpager"
                android:text="ViewPager"
                android:textColor="#FFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Lokasiku"
                android:onClick="location"
                android:textColor="#FFFF" />

            <Button
                android:layout_width="@dimen/btn_dimens"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="MyList"
                android:onClick="list"
                android:layout_marginLeft="@dimen/duabelas"
                android:textColor="#FFFF" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>